{% extends "base.twig" %}

{% block content %}

    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="{{ BRAND_LOGO }}" alt="" height="64">
        <h2>Embedded Example - Step 2</h2>
        <p class="lead">Using Selected Account To Show Insights Dashboard</p>
        <a href="/index.php"><button id="homeButton" type="button" disabled="true" class="btn btn-primary">Home</button></a>
        <p id="data-key"></p>

    </div>

    <div id="link_page_element"></div>



{% endblock %}

{% block script %}
    <script src="{{ ORG_URL }}/dock/link/2022-09-08/link.js" type="text/javascript"></script>
    <script>
        var widget = new DockLink({
            container: document.getElementById('link_page_element'),
            domain: "{{ ACCOUNT_URL }}",
            token: "{{ EMBED_TOKEN }}", // token to access your own account
            app: "dashboard/insights-dashboard",
            options: {
                accountKey: '{{ BORROWER_KEY }}', // key of customer acc
                tabs: "insights,accounting,payroll",
                hide: "welcome,metrics",
            }
        });

        widget.render();

        window.addEventListener('load', function () {
            $("#homeButton").prop("disabled", false);
        })

    </script>
{% endblock %}